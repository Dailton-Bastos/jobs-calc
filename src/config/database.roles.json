{
  "rules": {
    "jobs": {
      ".read": "auth !== null",
      ".write": "auth != null",
      ".indexOn": "user_id",
      "$uid": {
        ".read": "auth !== null && data.child('user_id').val() === auth.uid",
        ".write": "auth != null && (!data.exists() || data.child('user_id').val() === auth.uid)"
      }
    },
    "reports": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": "job_id",
      "$uid": {
        ".write": "auth != null && (!data.exists())"
      }
    }
  }
}
